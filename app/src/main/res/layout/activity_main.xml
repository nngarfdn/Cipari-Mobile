<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dash"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/actionbar_menu"
        app:layout_constraintStart_toStartOf="parent" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="3000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/image_slider"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
 
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/selamat_datang_di_e_cipari"
                android:textColor="#454545"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="24dp" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Profil Kelurahan Cipari"
                android:drawableLeft="@drawable/ic_outline_info_24"
                />
            <Button
                android:id="@+id/btn_peta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Peta Kelurahan Cipari"
                android:drawableLeft="@drawable/ic_maps"
                />

            <Button
                android:id="@+id/btn_lembaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Lembaga"
                android:drawableLeft="@drawable/ic_lembaga"
                />

            <Button
                android:id="@+id/btn_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Instagram"
                android:drawableLeft="@drawable/ic_instagram"
                />
            <Button
                android:id="@+id/btn_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Youtube"
                android:drawableLeft="@drawable/ic_youtube"
                />

            <Button
                android:id="@+id/btn_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Website"
                android:drawableLeft="@drawable/ic_website"
                />

            <Button
                android:id="@+id/btn_informasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/btn_rounded"
                android:text="Artikel"
                android:drawableLeft="@drawable/ic_artikel"
                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>